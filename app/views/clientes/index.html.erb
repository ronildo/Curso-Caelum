<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Clientes Cadastrados</h2>
		<div class="right">
			<label>Procurar Clientes</label>
			<input type="text" class="field small-field" />
			<input type="submit" class="button" value="search" />
		</div>
	</div>
	<!-- End Box Head -->	

	<!-- Table -->
	<div class="table">
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr>
				<th width="13"><input type="checkbox" class="checkbox" /></th>
				<th width="200">Nome</th>
				<th>Idade</th>
				<th>Data do cadastro</th>
				<th width="120" class="ac">Ações</th>
			</tr>
			<% @clientes.each do |cliente| %>
				<tr class='link <%= cycle("odd", "even") %>'>
					<td><input type="checkbox" class="checkbox" /></td>
					<td><h3><%= link_to cliente.nome, cliente_path(cliente), :class => "link" %></h3></td>
					<td><%= cliente.idade %></td>
					<td><%= formata_data(cliente.created_at) %></td>
					<td class="acoes">
							<%= link_to 'Destroy', cliente, :confirm => 'Are you sure?', :method => :delete, :class => "ico del" %>
							<%= link_to 'Edit', edit_cliente_path(cliente), :class => "ico edit" %>
					</td>
				</tr>
			<% end %>
		</table>

		<br clear="all" />
		<%= link_to content_tag(:span, "Criar novo cliente"), new_cliente_path, :class => "add-button" %>
		<br clear="all" />

		<!-- Pagging -->
		<div class="pagging">
			<div class="left"><%= page_entries_info @clientes %></div>
			<div class="right"><%= will_paginate @clientes %></div>
		</div>
		<!-- End Pagging -->
		
	</div>
	<!-- Table -->

	
</div>
<!-- End Box -->
